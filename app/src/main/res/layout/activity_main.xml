<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/team_A_txt"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:paddingTop="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_A_val"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:padding="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/threePointer_btn"
        android:text="@string/three_pt_btn_txt"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/field_goal_btn"
        android:text="@string/f_g_btn_txt"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/free_throw_btn"
        android:text="@string/f_t_btn_txt"
        android:textAllCaps="true"
        android:layout_marginTop="8dp"/>

</LinearLayout>